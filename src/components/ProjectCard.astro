---
export interface Props {
  title: string;
  imageUrl: string;
  description: string;
  url: string;
}

const { title, imageUrl, description, url } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 hover:scale-105 transform">
  <img src={imageUrl} alt={title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <h3 class="text-xl font-semibold text-gray-800 mb-2">{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <a href={url} class="text-blue-500 hover:text-blue-700 font-medium">Посмотреть проект →</a>
  </div>
</div>