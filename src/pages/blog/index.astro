---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
---

<MainLayout title="Блог - Советы по веб-разработке" description="Мой блог о веб-разработке, фреймворках и лучших практиках.">
  <div class="container mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold text-center mb-12">Блог</h1>
    <div class="max-w-4xl mx-auto space-y-8">
      {posts.map((post) => (
        <article class="bg-white p-6 rounded-lg shadow hover:shadow-md transition-shadow">
          <h2 class="text-2xl font-semibold text-gray-800 mb-2">
            <a href={`/blog/${post.slug}`} class="hover:text-blue-600">{post.data.title}</a>
          </h2>
          <p class="text-gray-600 mb-4">{post.data.description}</p>
          <div class="text-sm text-gray-500">
            <span>{post.data.author}</span> • <span>{new Date(post.data.publishDate).toLocaleDateString('ru-RU')}</span>
          </div>
        </article>
      ))}
    </div>
  </div>
</MainLayout>